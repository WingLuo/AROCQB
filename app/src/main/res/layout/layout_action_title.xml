<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_50dp"
>

    <FrameLayout
        android:id="@+id/btnBack"
        android:layout_width="@dimen/design_40dp"
        android:layout_height="@dimen/design_40dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/design_24dp"
            android:layout_height="@dimen/design_24dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_back" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <FrameLayout
            android:id="@+id/badge"
            android:layout_width="@dimen/design_42dp"
            android:layout_height="@dimen/design_42dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/design_8dp"
            android:layout_marginTop="@dimen/design_4dp"
            android:layout_marginRight="@dimen/design_8dp"
            android:layout_marginBottom="@dimen/design_4dp">

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="@dimen/design_24dp"
                android:layout_height="@dimen/design_24dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/design_15dp"
            android:layout_marginRight="@dimen/design_15dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="下一步" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/design_50dp"
        android:layout_marginRight="@dimen/design_50dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/design_18sp"
        android:textStyle="bold"
        tools:text="标题" />


</RelativeLayout>
